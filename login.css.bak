/* dropdown menu*/
.menu-button{
	background-color:transparent;
	color:white;
	padding:15px;
	font-size:15px;
	cursor:pointer;
	border:1px solid #fff;
	}
	.right-menu{
		position:relative;
		display:inline-block;
		float:right;
		margin-top:-55px;
	}
	.dropdown-menu {
		display:none;
		position:absolute;
		background-color:#f9f9f9;
		min-width:158px;
		z-index:1;	
	}
	.dropdown-menu a {
		
		padding:1px 3px;
		text-decoration:none;
		display:block;}
		
	.dropdown-menu a:hover{
		background-color:#000;
	color:#FFFCB2;}
	.right-menu:hover .dropdown-menu{
		display:block;}
	.right-menu:hover .menu-button{
		background-color:transparent;}	